#!/bin/bash -eu
set -o pipefail

q=${1:-}

source "$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")/x-lib.sh"
#-------------------------------------------------------------------------------
ask "crwl.href" "${CRWL_HREF:-}"
crwl_href=$ASK_BUF
#-------------------------------------------------------------------------------
curla -f "$ENDPOINT_URL$crwl_href/list?$q" | jq
#-------------------------------------------------------------------------------
