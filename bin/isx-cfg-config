#!/bin/bash -eu
set -o pipefail

source "$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")/x-lib.sh"

file_ext=.yml
#-------------------------------------------------------------------------------
ask "msg_prefetch" 1
msg_prefetch=$ASK_BUF
#-------------------------------------------------------------------------------
y=$(cat <<-EOT
	msg_prefetch: $msg_prefetch
	EOT
    )
#-------------------------------------------------------------------------------
echo "$y"
#-------------------------------------------------------------------------------
ask "file [$file_ext]" config
file_=$ASK_BUF

file="$file_$file_ext"
#-------------------------------------------------------------------------------
echo "$y" > "$file"
#-------------------------------------------------------------------------------
