#!/bin/bash -eu
set -o pipefail

source "$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")/x-lib.sh"
#-------------------------------------------------------------------------------
ask "url" http://example.com
url=$ASK_BUF

ask "rate_lim" null
rate_lim=$ASK_BUF

ask "chans" null
chans=$ASK_BUF
#-------------------------------------------------------------------------------
j=$(cat <<-EOT
	{
	  "url": "$url",
	  "rate_lim": $rate_lim,
	  "chans": $chans
	}
	EOT
    )

p=$(
    curla -X POST -d "$j" "$ENDPOINT_URL/site"
)
echo "$p" | jq
echo "$p" | jq -r '.href' | grep -v 'null' >> "$SITE_HREF_"
#-------------------------------------------------------------------------------
