#!/bin/bash -eu
set -o pipefail

source "$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")/x-lib.sh"
#-------------------------------------------------------------------------------
ask "org.href" "${ORG_HREF:-}"
org_href=$ASK_BUF
#-------------------------------------------------------------------------------
ask "url" http://crawler-html.plugin.dev.isoxya.com:8000/data
url=$ASK_BUF

ask "tag" crawler-html
tag=$ASK_BUF

ask "pub" null
pub=$ASK_BUF

ask "chans" null
chans=$ASK_BUF
#-------------------------------------------------------------------------------
j=$(cat <<-EOT
	{
	  "url": "$url",
	  "tag": "$tag",
	  "pub": $pub,
	  "chans": $chans
	}
	EOT
    )

p=$(
    curla -X POST -d "$j" "$ENDPOINT_URL$org_href/plug_proc"
)
echo "$p" | jq
echo "$p" | jq -r '.href' | grep -v 'null' >> "$PLUG_PROC_HREF_"
#-------------------------------------------------------------------------------
