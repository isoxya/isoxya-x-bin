#!/bin/bash -eu
set -o pipefail

source "$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")/x-lib.sh"
#-------------------------------------------------------------------------------
ask "site.href" "${SITE_HREF:-}"
site_href=$ASK_BUF
#-------------------------------------------------------------------------------
ask "pages_max" null
pages_max=$ASK_BUF

ask "depth_max" null
depth_max=$ASK_BUF

ask "user_agent.href" "${USER_AGENT_HREF:-}"
user_agent_href=$ASK_BUF

ask_opts "list.href" 0 null "${LIST_HREF:-}"
list_href=$ASK_BUF

case $list_href in
    null)
        list=null
        ;;
    *)
        list=$(cat <<-EOT
	  {
	    "href": "$list_href"
	  }
	EOT
        )
        ;;
esac

ask "validate_ext" null
validate_ext=$ASK_BUF

ask "org.href" "${ORG_HREF:-}"
org_href=$ASK_BUF

ask "plug_proc_conf" null
plug_proc_conf=$ASK_BUF

ask "plug_proc.hrefs" "${PLUG_PROC_HREF:-}"
j_plug_proc=$(echo "$ASK_BUF" | tr ' ' '\n' | xargs -I {} echo '{"href": "{}"},' | sed '$ s/.$//' | tr '\n' ' ')

ask "plug_strm.hrefs" "${PLUG_STRM_HREF:-}"
j_plug_strm=$(echo "$ASK_BUF" | tr ' ' '\n' | xargs -I {} echo '{"href": "{}"},' | sed '$ s/.$//' | tr '\n' ' ')
#-------------------------------------------------------------------------------
j=$(cat <<-EOT
	{
	  "pages_max": $pages_max,
	  "depth_max": $depth_max,
	  "user_agent": {
	    "href": "$user_agent_href"
	  },
	  "list": $list,
	  "validate_ext": $validate_ext,
	  "org": {
	    "href": "$org_href"
	  },
	  "plug_proc_conf": $plug_proc_conf,
	  "plug_proc": [$j_plug_proc],
	  "plug_strm": [$j_plug_strm]
	}
	EOT
    )

c=$(
    curla -X POST -d "$j" "$ENDPOINT_URL$site_href/crwl"
)
echo "$c" | jq
echo "$c" | jq -r '.href' | grep -v 'null' >> "$CRWL_HREF_"
#-------------------------------------------------------------------------------
