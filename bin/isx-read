#!/bin/bash -eu
set -o pipefail

href_=${1:-}

source "$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")/x-lib.sh"
#-------------------------------------------------------------------------------
if [ -z "$href_" ]; then
    ask_opts "href" 0 \
        "${ORG_HREF:-}" \
        \
        "${PLUG_PROC_HREF:-}" \
        "${PLUG_STRM_HREF:-}" \
        "${USER_AGENT_HREF:-}" \
        \
        "${SITE_HREF:-}" \
        \
        "${LIST_HREF:-}" \
        \
        "${CRWL_HREF:-}" \
        #
    href=$ASK_BUF
else
    href=$href_
fi
#-------------------------------------------------------------------------------
curla "$ENDPOINT_URL$href" | jq
#-------------------------------------------------------------------------------
